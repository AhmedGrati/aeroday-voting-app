<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/voting_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Voting"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364" />

    <Button
        android:id="@+id/program_aeroday_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/voting_button"
        app:layout_constraintEnd_toEndOf="@+id/voting_button"
        app:layout_constraintStart_toStartOf="@+id/voting_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Aeroday Programme"
        android:textAllCaps="false"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/program_airshow_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@+id/program_aeroday_button"
        app:layout_constraintEnd_toEndOf="@id/program_aeroday_button"
        app:layout_constraintStart_toStartOf="@id/program_aeroday_button"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Airshow Programme"
        android:textAllCaps="false"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>