<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="150dp"
    android:clickable="true"
    android:longClickable="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"

    app:cardElevation="16dp"
    app:cardCornerRadius="8dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background_image"
        android:src="@drawable/cao"/>
    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/challenge_name_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/challenge_name_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description_text_view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"
                android:text="Voting"/>

            <TextView
                android:id="@+id/place_name_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat"
                app:layout_constraintBottom_toTopOf="@id/time_text_view"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="Voting"/>

            <TextView
                android:id="@+id/time_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Voting"/>
            <TextView
                android:id="@+id/is_active_text_view"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/response_is_active_text_view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="15dp"
                android:text="Status :"/>
            <TextView
                android:id="@+id/response_is_active_text_view"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="15dp"
                android:text="Voting"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

